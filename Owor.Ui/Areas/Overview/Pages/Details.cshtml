@page "{deviceId}"
@model Owor.Ui.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Device @Html.DisplayFor(model => model.Device.Id)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Device.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Device.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Device.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Device.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Device.LastRead)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Device.LastRead)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Device.Values)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                </tr>
                @foreach (var measurment in Model.Device.Values)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => measurment.Key)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => measurment.Value)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to Overview</a>
</div>